# VR Estranho Security Configuration
# Copy this file to .env and set your production values

# JWT Secret - MUST be set in production (minimum 32 characters)
JWT_SECRET=your-super-secure-jwt-secret-here-minimum-32-characters

# JWT Token Expiration
JWT_EXPIRES_IN=24h

# Agent Authentication Token - MUST be set in production
AGENT_TOKEN=your-agent-authentication-token-here

# Default Admin Password - MUST be set in production
DEFAULT_ADMIN_PASSWORD=your-secure-admin-password

# Database Configuration
DB_PATH=./data/database.sqlite

# Application Configuration
NODE_ENV=production
PORT=3000
FRONTEND_URL=http://localhost:4200

# Enable this in production
# NODE_ENV=production